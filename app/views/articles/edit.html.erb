<h1>Edit article</h1>

<% if @article.errors.any? %>
	<h1>The following errors prevented the article from being saves</h1>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>

	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

<p>
	<%= link_to "Cancel and back to articles", articles_path %>
</p>