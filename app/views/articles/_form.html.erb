<div class="container">

	<%= render 'shared/errors' %>





	<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>


		<div class="row justify-content-md-center">
		  <label for="colFormLabelLg" class="col-sm-2 col-form-label-lg"><%= f.label :title, class:"col-2 col-form-label text-light" %></label>
		  <div class="col-sm-10">
		  	<%= f.text_field :title, class: "form-control form-control-lg shadow rounded", placeholder: "Title" %>
		  </div>

		  <label for="colFormLabelLg" class="col-sm-2 col-form-label-lg"><%= f.label :description, class:"col-2 col-form-label text-light" %></label>
		  <div class="col-sm-10">
		  	<%= f.text_area :description, rows: 10, class: "form-control form-control-lg shadow rounded", placeholder: "Description" %>
		 </div>
		</div>

		<div class="row justify-content-md-center mt-4">
			<div class="col-auto">
				<%= f.submit class: "btn btn-outline-light btn-lg" %>
			</div>
		</div>
	<% end %>

		<div class="row justify-content-md-center mt-4 mb-3">
			<div class="col-auto">
				<%= link_to "[ Cancel and back to articles ]", articles_path, class: "text-info" %>
			</div>
		</div>


</div>